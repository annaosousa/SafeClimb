<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMonth"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="October"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textDay"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="11"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textComma"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:text=","
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textYear"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="2024"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textAt"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:text="at"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textHour"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="3:30"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textPeriodOfDay"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:text="PM"
            android:textColor="#000000"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageWindy"
            android:layout_width="55dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/windy" />

        <TextView
            android:id="@+id/textWindy"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="15 km/h"
            android:textColor="#000000"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imageHumidity"
            android:layout_width="55dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/water" />

        <TextView
            android:id="@+id/textHumidity"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="70%"
            android:textColor="#000000"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imageTemperature"
            android:layout_width="55dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/thermometer" />

        <TextView
            android:id="@+id/textTemperature"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="22Â°C"
            android:textColor="#000000"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#D3D3D3" />

    </LinearLayout>
</LinearLayout>
