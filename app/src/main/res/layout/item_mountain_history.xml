<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/mountain_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/morro_do_anhangava" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mountain_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mountain_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pico do ParanÃ¡"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/climb_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="April 12, 2024"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/climb_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total time: 5h 15min"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>